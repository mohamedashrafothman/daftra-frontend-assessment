{
	"extends": ["next", "next/core-web-vitals", "eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"react/no-unescaped-entities": "off",
		"no-extra-boolean-cast": "off",
		"@typescript-eslint/no-explicit-any": "off",
		"no-unused-vars": [
			1,
			{
				"args": "after-used",
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"destructuredArrayIgnorePattern": "^_"
			}
		]
	}
}
